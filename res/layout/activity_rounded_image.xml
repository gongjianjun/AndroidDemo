<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:round="http://schemas.android.com/apk/res/com.longluo.demo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_rounded_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Rounded Image View"
        android:textSize="12sp" />

    <com.longluo.demo.widgets.image.RoundedImageView
        android:id="@+id/ri_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:clickable="false"
        android:scaleType="centerCrop"
        round:corner_radius="100dp" />
    
    

</LinearLayout>